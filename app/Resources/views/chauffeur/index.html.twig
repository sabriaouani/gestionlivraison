{{ include('hf/header_admin.html.twig') }}
<style>
    body {
        background-image: url("{{ absolute_url(asset('Bundles/bureau-twenty-1920x1027.jpg')) }}");
        background-color: #cccccc;
    }
</style>
<br>
<div class="container">
    <div class="row">
        <a href="{{ path('chauffeur_new') }}" class="btn btn-primary" style="position: absolute; right: 10px;">Ajouter chauffeur</a>
    </div>
    <br>
    <h3>Liste des chauffeurs</h3>
    <table class="table table-dark">
        <thead>
            <tr>
                <th>Id</th>
                <th>Cin</th>
                <th>Nom et prenom</th>
                <th>Numero telephone</th>
                <th>Date debut</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for chauffeur in chauffeurs %}
            <tr>
                <td><a href="{{ path('chauffeur_show', { 'id': chauffeur.id }) }}">{{ chauffeur.id }}</a></td>
                <td>{{ chauffeur.cin }}</td>
                <td>{{ chauffeur.nomprenom }}</td>
                <td>{{ chauffeur.tel }}</td>
                <td>{% if chauffeur.datenes %}{{ chauffeur.datenes|date('Y-m-d') }}{% endif %}</td>
                <td>
                    <a href="{{ path('chauffeur_show',{'id':chauffeur.id}) }}" class="btn btn-primary btn-sm">Afficher</a>
                    <a href="{{ path('chauffeur_edit',{'id':chauffeur.id})}}" class="btn btn-light">Modifier</a>
                    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#exampleModal" data-whatever="{{ chauffeur.id }}">
                        supprimer
                    </button>


                </td>
            </tr>
        {% endfor %}

        </tbody>
    </table>
</div>
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Vous etes sur de supprimer?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="{{ path('chauffeur_delete') }}">

                    <input type="text" class="form-control" id="recipient-name" hidden name="id">
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">annuler</button>
                        <button type="submit" class="btn btn-danger">supprimer</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>
<script>

    $('#exampleModal').on('show.bs.modal', function (event) {
        var button = $(event.relatedTarget) // Button that triggered the modal
        var recipient = button.data('whatever') // Extract info from data-* attributes
        // If necessary, you could initiate an AJAX request here (and then do the updating in a callback).
        // Update the modal's content. We'll use jQuery here, but you could use a data binding library or other methods instead.
        var modal = $(this)
        modal.find('.modal-title').text('Vous etes sur de supprimer ' + recipient)
        modal.find('.modal-body input').val(recipient)
    })
</script>

