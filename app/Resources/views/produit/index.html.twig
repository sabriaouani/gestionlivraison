{{ include('hf/header_gestionnaire.html.twig') }}
<style>
    body {
        background-image: url("{{ absolute_url(asset('Bundles/rrrrrrrrrrrrrr.jpg')) }}");
        background-color: #cccccc;
    }
</style>


    <div class="row">
        <a href="{{ path('produit_new') }}" class="btn btn-primary" style="position: absolute; right: 10px;">Ajouter Produit</a>
    </div>
    <br>
    <h3>List des Produits</h3>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom de produit</th>
                <th>Type de produit</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}


            <tr>
                <td><a href="{{ path('produit_show', { 'id': produit.id }) }}">{{ produit.id }}</a></td>
                <td><strong>{{ produit.nomProduit }}</strong></td>
                <td>
                   <strong>{{ produit.idType }}</strong>
                </td>
                <td>
                    <a href="{{ path('produit_edit',{'id':produit.id})}}" class="btn btn-light">Modifier</a>
                    <a href="{{ path('produit_delete',{'id':produit.id})}}" class="btn btn-danger btn-sm">Supprimer</a>
                </td>

            </tr>


        {% endfor %}
        </tbody>
    </table>
</div>


